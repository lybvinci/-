<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:padding="40dp"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"></android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/base_color_text_black"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:textColorHint="@color/base_color_text_gray"
        android:hint="姓名" />
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/base_color_text_black"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:textColorHint="@color/base_color_text_gray"
        android:hint="电话号码" />

    <LinearLayout
        android:id="@+id/llInputPsw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >
        <EditText
            android:layout_height="40dp"
            android:layout_width="60dp"
            android:id="@+id/etInputPsw"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:textColor="@color/base_color_text_black"
            android:background="@color/white"
            android:textColorHint="@color/base_color_text_gray"
            android:hint="密码" />

        <ToggleButton
            android:id="@+id/tbPswFlag"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/toggle_selector"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>
    <Button
        android:id="@+id/btnGetCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:textSize="23sp"
        android:padding="5dp"
        android:text="获取验证码"/>

    <LinearLayout
        android:id="@+id/llInputCode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etInputCode"
            android:layout_height="40dp"
            android:layout_width="60dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColorHint="@color/base_color_text_gray"
            android:hint="验证码" />

        <Button
            android:id="@+id/btnReGetCode"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="重新获取验证码"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btnSure"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="确定"
        android:layout_gravity="center"
        android:layout_marginTop="15dp" />

</LinearLayout>